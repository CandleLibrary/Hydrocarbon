{
    "compileOnSave": true,
    "include": ["./source/typescript/**/*"],
    "exclude": ["./source/cli/*","./source/cpp/*"],
    "compilerOptions": {
        "types" : ["@types/node"],
        "allowJs": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "outDir":"./build/library",
        "declarationDir": "./build/types",
        "declaration": true,
        "watch": true,
        "moduleResolution": "node"
    }
}