{
  "name": "@candlefw/hydrocarbon",
  "version": "0.2.1-ts",
  "description": "Parser Compiler",
  "main": "./build/library/hydrocarbon.js",
  "types": "./build/types/hydrocarbon.d.ts",
  "bin": {
    "hydrocarbon": "./source/cli/cli.js"
  },
  "type": "module",
  "scripts": {
    "build":"tsc",
    "prepublish": "cp ./node_modules/@candlefw/whind/build/whind.js ./data",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile.grammar": "hydrocarbon compile --unattended -t mjs -o ./source/typescript/grammar ./source/grammars/hcg/hcg.hcg",
    "compile.grammar.test": "hydrocarbon compile -d --unattended -t mjs -o ./source/typescript/grammar ./source/grammars/hcg/hcg.hcg",
    "compile.test": "hydrocarbon compile --parser glalr -d -m --unattended ./source/grammars/misc/test3.hcg",
    "compile.test.table": "hydrocarbon compile --parser glalr -d -m --unattended ./source/grammars/misc/test.hcg",
    "compile.default": "hydrocarbon compile --parser glalr -d -u -m ./source/grammars/misc/default-productions.hcg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefw/hydrocarbon.git"
  },
  "keywords": [
    "Compiler",
    "Parser"
  ],
  "author": "Anthony Weathersby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/candlefw/hydrocarbon/issues"
  },
  "homepage": "https://github.com/candlefw/hydrocarbon#readme",
  "dependencies": {
    "@candlefw/js": "^0.0.9",
    "@candlefw/whind": "latest",
    "commander": "^4.1.0",
    "terser": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^13.7.6",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  },
  "engine": {
    "node": ">=13.7.0"
  }
}
