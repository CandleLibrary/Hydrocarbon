{
  "name": "@candlefw/hydrocarbon",
  "version": "0.1.6",
  "description": "Parser Compiler",
  "main": "source/hydrocarbon.mjs",
  "bin": {
    "hydrocarbon": "./console.js"
  },
  "scripts": {
    "prepublish": "cp ./node_modules/@candlefw/whind/build/whind.js ./data",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile.grammar": "hydrocarbon compile --unattended -t mjs -o ./source/grammar/ ./source/grammar/hcg/hcg.hcg",
    "compile.grammar.test": "hydrocarbon compile -d --unattended -t mjs -o ./source/grammar/ ./source/grammar/hcg/hcg.hcg",
    "compile.test": "hydrocarbon compile -d -m --unattended ./source/grammar/misc/test2.hcg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefw/hydrocarbon.git"
  },
  "keywords": [
    "Compiler",
    "Parser"
  ],
  "author": "Anthony Weathersby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/candlefw/hydrocarbon/issues"
  },
  "homepage": "https://github.com/candlefw/hydrocarbon#readme",
  "dependencies": {
    "@candlefw/js": "^0.0.9",
    "@candlefw/whind": "latest",
    "commander": "^4.1.0",
    "terser": "^4.6.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  },
  "engine": {
    "node": ">=12.0.0"
  }
}
